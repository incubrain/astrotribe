{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "plugins": ["@nx/nuxt", "@nx/vite", "@nx/cypress", "@nx/eslint"],
  "namedInputs": {
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml", "{workspaceRoot}/.env"],
    "default": ["{projectRoot}/**/*", "!{projectRoot}/**/*.spec.ts", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/cypress/**/*",
      "!{projectRoot}/**/*.cy.[jt]s?(x)",
      "!{projectRoot}/cypress.config.[jt]s",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/**/*.spec.ts"
    ]
  },
  "nxCloudId": "66f283bd927c3b4c910011f3",
  "pluginsConfig": {
    "@nx/nuxt": {
      "testTargetName": "test",
      "buildTargetName": "build"
    },
    "@nx/vite": {
      "testTargetName": "test",
      "buildTargetName": "build"
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "e2e", "format", "format:check"]
      }
    }
  },
  "targetDefaults": {
    "e2e-ci--**/*": {
      "dependsOn": ["^build-static"]
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json", "{workspaceRoot}/.eslintignore"]
    },
    "format": {
      "inputs": ["default", "{workspaceRoot}/.prettierrc.js"]
    },
    "format:check": {
      "inputs": ["default", "{workspaceRoot}/.prettierrc.js"]
    }
  },
  "release": {
    "version": {
      "preVersionCommand": "npx nx run-many -t build"
    }
  }
}
