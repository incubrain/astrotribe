{
  "name": "@astronera/db",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "root": "libs/db",
  "sourceRoot": "libs/db/src",
  "projectType": "library",
  "targets": {
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["prisma generate --schema=./src/prisma/schema.prisma"],
        "cwd": "libs/db"
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/db/dist",
        "configFile": "libs/db/vite.config.ts",
        "includeDevDependenciesInPackageJson": false,
        "assets": [
          {
            "glob": "**/*",
            "input": "libs/db/src/generated",
            "output": "generated"
          }
        ]
      },
      "dependsOn": ["generate"]
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist generated",
        "cwd": "libs/db"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/db/**/*.{ts,tsx,js,jsx}", "libs/db/package.json"]
      }
    }
  }
}
