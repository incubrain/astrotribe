{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "schemaAnalyzer": ["../../generators/schema-analyzer.ts"]
    },
    "composite": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2022",
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"]
  },
  "include": ["src/**/*", "index.d.ts", "index.ts"],
  "exclude": ["dist/**/*"]
}
