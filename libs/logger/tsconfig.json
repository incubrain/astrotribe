{
  "extends": "../../shared/tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "composite": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ES2022",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
