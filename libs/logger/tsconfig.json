{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "module": "ESNext",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler", // Changed to bundler for Vite
    "resolveJsonModule": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "@ib/cache": ["../cache/src", "../db/src"] // More specific path mapping
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"],
  "references": [{ "path": "../cache" }, { "path": "../db" }]
}
