{
  "name": "@astronera/debugger",
  "version": "0.1.0",
  "description": "Playwright MCP Debugger for AstroTribe",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "start:simple": "tsx src/index.ts --mode=simple",
    "start:interactive": "tsx src/index.ts --mode=interactive",
    "start:vscode": "tsx src/index.ts --use-vscode=true",
    "install:vscode": "code-insiders --install-extension ms-playwright.playwright-mcp",
    "debug": "tsx src/index.ts"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@playwright/mcp": "^0.0.9",
    "@playwright/test": "1.51.1",
    "child_process": "^1.0.2",
    "node-fetch": "^2.6.9",
    "playwright": "^1.51.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "concurrently": "^9.1.2",
    "dotenv": "^16.3.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "wait-on": "^8.0.3"
  }
}
