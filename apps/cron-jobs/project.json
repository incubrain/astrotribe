{
  "name": "@astronera/cron-jobs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/cron-jobs",
  "// targets": "to see all targets run: nx show project @astronera/cron-jobs --web",

  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["rimraf dist", "vite build"],
        "cwd": "apps/cron-jobs"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite-node src/index.ts",
        "cwd": "apps/cron-jobs"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/src/index.js",
        "cwd": "apps/cron-jobs"
      }
    },

    "debug": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx --inspect-brk src/index.ts",
        "cwd": "apps/cron-jobs",
        "env": {
          "NODE_ENV": "development",
          "DEBUG": "true"
        }
      }
    },

    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint 'src/**/*.{js,ts}'",
        "cwd": "apps/cron-jobs"
      }
    },

    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint 'src/**/*.{js,ts}' --fix",
        "cwd": "apps/cron-jobs"
      }
    },

    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "apps/cron-jobs"
      }
    },

    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --coverage",
        "cwd": "apps/cron-jobs",
        "env": {
          "NODE_ENV": "test",
          "VITEST_MODE": "true"
        }
      }
    },

    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest",
        "cwd": "apps/cron-jobs",
        "env": {
          "NODE_ENV": "test",
          "VITEST_MODE": "true"
        }
      }
    },

    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["rimraf dist", "rimraf coverage", "rimraf .turbo"],
        "cwd": "apps/cron-jobs",
        "parallel": true
      }
    }
  }
}
