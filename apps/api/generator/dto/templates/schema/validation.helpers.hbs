/** * Validation helper functions for
{{name}}
*/

{{#each fields}}
  {{#if validationRules}}
    /** * Validates
    {{name}}
    field */ export function validate{{capitalize name}}(value: unknown): boolean {
    {{#each validationRules}}
      //
      {{decorator}}
      validation if (!{{lowercase decorator}}(value)) { return false }
    {{/each}}
    return true }

  {{/if}}
{{/each}}