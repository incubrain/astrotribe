{
  "extends": ["./.nuxt/tsconfig.json", "../../tsconfig.base.json"],
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "baseUrl": ".",
    "rootDir": "../..",
    "paths": {
      "@base": ["../../layers/base"],
      "#layers/*": ["../../layers/*"],
      "@types/*": ["./types/*"],
      "#imports": ["./.nuxt/imports.d.ts"],
      "#shared/*": ["./shared/*"]
    }
  },
  "references": [
    { "path": "../../layers/base" },
    { "path": "../../layers/advert" },
    { "path": "../../layers/crud" }
  ],
  "include": [
    "./types/**/*.d.ts",
    "./**/*.ts",
    "./**/*.d.ts",
    "./.nuxt/imports.d.ts",
    "pages/settings/index.vue"
  ]
}
