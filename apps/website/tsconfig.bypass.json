// apps/website/tsconfig.bypass.json
{
    "compilerOptions": {
      "moduleResolution": "bundler",
      "target": "ESNext",
      "module": "ESNext",
      "strict": true,
      "skipLibCheck": true,
      "noEmit": true,
      "baseUrl": ".",
      "types": ["node"],
      "jsx": "preserve",
      "allowJs": false,
      "checkJs": false
    },
    "include": [
      "./server/**/*.ts"  // Start with just server code
    ],
    "exclude": [
      "node_modules",
      ".nuxt",
      "dist",
      "**/*.vue",
      "**/*.js"
    ]
  }