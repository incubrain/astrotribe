{
  "name": "@astronera/admin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/admin",
  "// targets": "to see all targets run: nx show project @astronera/admin --web",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpx nuxi build",
        "cwd": "apps/admin"
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": [
            "@astronera/base",
            "@astronera/supabase",
            "@astronera/crud",
            "@astronera/advert",
            "@astronera/referral"
          ]
        }
      ]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpx nuxi dev",
        "cwd": "apps/admin"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint --config eslint.config.js ."
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/admin && vitest run --coverage",
        "env": {
          "NUXT_PUBLIC_NODE_ENV": "test",
          "VITEST_MODE": "true"
        }
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/admin && vitest",
        "env": {
          "NUXT_PUBLIC_NODE_ENV": "test",
          "VITEST_MODE": "true"
        }
      }
    }
  }
}
