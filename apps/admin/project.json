{
  "name": "@astronera/admin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/admin",
  "// targets": "to see all targets run: nx show project @astronera/admin --web",
  "targets": {
    "build:base": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nuxi build",
        "cwd": "layers/base"
      }
    },
    "build:auth": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nuxi build",
        "cwd": "layers/supabase"
      }
    },
    "build:referral": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd layers/referral && npx nuxi build"
      }
    },
    "build:testing": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd layers/testing && npx nuxi build"
      }
    },
    "build:advert": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd layers/advert && npx nuxi build"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nuxi build",
        "cwd": "apps/admin"
      },
      "dependsOn": [
        "build:base",
        "build:auth",
        "build:advert",
        "build:referral",
        {
          "target": "build",
          "projects": "dependencies",
          "params": "forward"
        }
      ]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nuxi dev",
        "cwd": "apps/admin"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint --config eslint.config.js ."
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/admin && vitest run --coverage",
        "env": {
          "NUXT_PUBLIC_NODE_ENV": "test",
          "VITEST_MODE": "true"
        }
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/admin && vitest",
        "env": {
          "NUXT_PUBLIC_NODE_ENV": "test",
          "VITEST_MODE": "true"
        }
      }
    }
  }
}
