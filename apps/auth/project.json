{
  "name": "@astronera/auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/auth",
  "// targets": "to see all targets run: nx show project @astronera/auth --web",
  "targets": {
    "build:base": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd layers/base && npx nuxi build"
      }
    },

    "build:referral": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd layers/referral && npx nuxi build"
      }
    },
    "build:auth": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd layers/supabase && npx nuxi build"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nuxi build",
        "cwd": "apps/auth"
      },
      "dependsOn": [
        "build:base",
        "build:auth",
        "build:referral",
        {
          "target": "build",
          "projects": "dependencies",
          "params": "forward"
        }
      ]
    },

    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nuxi dev",
        "cwd": "apps/auth"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint --config eslint.config.js ."
      }
    }
  }
}
