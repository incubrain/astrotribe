{
  "name": "@astronera/base",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "layers/base",
  "targets": {
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd layers/base && npx nuxi prepare"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "layers/base/dist",
        "tsConfig": "layers/base/tsconfig.json",
        "main": "layers/base/index.ts",
        "assets": [
          {
            "glob": "**/*.{css,scss,html,json,vue}",
            "input": "layers/base",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "layers/base/**/*.{ts,tsx,vue}"
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/layers/{projectRoot}"
      }
    }
  },
  "tags": [
    "type:layer",
    "scope:shared"
  ]
}
