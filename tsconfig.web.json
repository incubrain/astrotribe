{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    // Web-specific settings
    "allowJs": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "useDefineForClassFields": true,
    "types": ["node", "vue"]
  },
  "include": [
    "./components/**/*.{ts,vue}",
    "./composables/**/*.{ts,vue}",
    "./layouts/**/*.{ts,vue}",
    "./pages/**/*.{ts,vue}",
    "./plugins/**/*.{ts,vue}",
    "./store/**/*.{ts,vue}",
    "./types/**/*.{ts,vue}",
    "./**/*.ts",
    "./**/*.d.ts"
  ]
}
