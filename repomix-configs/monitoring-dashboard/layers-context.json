{
  "output": {
    "filePath": "ai-context/monitoring-dashboard/layers-context.txt",
    "style": "xml",
    "removeComments": false,
    "removeEmptyLines": false,
    "copyToClipboard": false,
    "showLineNumbers": false,
    "topFilesLength": 0
  },
  "include": [
    "layers/base/**/*.{ts,tsx,js,vue}",
    "layers/auth/**/*.{ts,tsx,js,vue}"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/coverage/**",
      "**/.nuxt/**",
      "**/tests/**",
      "**/*.test.*",
      "**/*.spec.*",
      "**/debug/**",
      "**/tmp/**",
      "**/.cache/**",
      "**/logs/**",
      "**/build/**"
    ]
  },
  "security": {
    "enableSecurityCheck": true,
    "excludePatterns": [
      "**/secrets/**",
      "**/config/**/*.{prod,staging}.*"
    ]
  }
}