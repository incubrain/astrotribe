{
  "output": {
    "filePath": "ai-context/website-context.txt",
    "style": "markdown",
    "headerText": "Website application context including shared libraries and layers",
    "showLineNumbers": true,
    "topFilesLength": 10
  },
  "include": [
    "apps/website/**/*.{ts,tsx,js,jsx,vue}",
    "apps/website/**/*.md",
    "libs/**/*.{ts,tsx,js}",
    "layers/**/*.{ts,tsx,js,vue}",
    "shared-runtime.config.ts"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/coverage/**",
      "**/.nuxt/**",
      "**/tests/**",
      "**/*.test.*",
      "**/*.spec.*",
      "**/debug/**"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  }
}
