      "#layers/*": ["layers/*"],
      "@ib/*": ["libs/*/src"],
      "@astronera/*": ["libs/*/src/index.ts"]
    }
  },
  "references": [
    { "path": "shared" },
    // Applications
    { "path": "apps/api" },
    { "path": "apps/chrome-extension" },

    // Nuxt Applications
    { "path": "apps/website" },
    { "path": "apps/app" },
    { "path": "apps/admin" },
    { "path": "apps/auth" },

    // Nuxt Layers
    { "path": "layers/base" },
    { "path": "layers/crud" },
    { "path": "layers/advert" },
    { "path": "layers/supabase" },

    // Shared Libraries
    { "path": "libs/logger" },
    { "path": "libs/cache" },
    { "path": "libs/db" },
    { "path": "libs/core" },
    { "path": "apps/api" }
  ],
  "include": ["prettier.config.mjs", "shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
