{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "#layers/*": ["layers/*"],
      "@ib/*": ["libs/*/src"]
    },
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/.*/",
    "**/.*",
    "**/*.spec.ts",
    "**/.nuxt",
    "**/output",
    ".output",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/__tests__",
    "temp",
    "tmp"
  ]
}
