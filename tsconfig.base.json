{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "importsNotUsedAsValues": "remove",
    "preserveValueImports": false,
    "moduleResolution": "bundler",
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "#layers/*": ["layers/*"],
      "@ib/*": ["libs/*/src"],
      "@astronera/*": ["libs/*/src"]
    },
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/.*/",
    "**/.*",
    "**/*.spec.ts",
    "**/.nuxt",
    "**/output",
    ".output",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/__tests__",
    "temp",
    "tmp",
    "**/.cache",
    "**/build",
    "**/dist",
    "**/node_modules/.pnpm"
  ]
}
