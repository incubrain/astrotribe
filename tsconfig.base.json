{
  "files": [],
  "compilerOptions": {
    "composite": true,
    "paths": {
      "@ib/logger": ["libs/logger/src"],
      "@ib/logger/*": ["libs/logger/src/*"],
      "@ib/db-testing": ["libs/db-testing"],
      "@ib/db-testing/*": ["libs/db-testing/*"],
      "@website/*": ["apps/website/*"],
      "#layers/*": ["layers/*"],
      "@@astronera/auth/*": ["apps/auth/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true, // good for performance, skips .d.ts files
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["node", "vue"],
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
